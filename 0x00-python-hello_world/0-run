#!/bin/bash

# Check if the $PYFILE environment variable is set
if [ -z "$PYFILE" ]; then
    echo "Error: The environment variable \$PYFILE is not set."
    exit 1
fi

# Check if the specified Python script exists
if [ ! -f "$PYFILE" ]; then
    echo "Error: The specified Python script '$PYFILE' does not exist."
    exit 1
fi

# Run the Python script
python "$PYFILE"

